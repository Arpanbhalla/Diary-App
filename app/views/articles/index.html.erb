<h1>Show here all the articles</h1>

<p>
  <%= link_to 'New Entry', new_article_path %>
</p>

<table>

    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Entry made on</th>
    </tr>
  <% @articles.each do |article| %>
    <tr>
      <th align="left"><%= article.title %></th>
      <th align="left"><%= article.description %></th>
      <th align="left"><%= article.created_at %></th>
      <th><%= link_to 'Show',article_path(article) %></th>
      <th><%= link_to 'Edit', edit_article_path(article) %></th>
      <th><%= link_to 'Delete', article_path(article),method: :delete, data:{confirm: "Are you sure ?"} %></th>
    </tr>
  <% end %>

</table>
